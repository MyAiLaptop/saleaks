// Advertiser account - businesses that want to advertise
model AdvertiserAccount {
  id            String   @id @default(cuid())

  // Phone number (normalized to international format)
  phoneNumber   String   @unique

  // Password authentication (bcrypt hashed)
  passwordHash  String?

  // Business info (basic)
  businessName  String?
  email         String?
  emailVerified Boolean  @default(false)

  // Password reset tokens
  passwordResetToken   String?   @unique
  passwordResetExpires DateTime?

  // Credit/Token balance (in cents ZAR)
  creditBalance Int      @default(0)
  totalSpent    Int      @default(0)

  // Verification
  verified      Boolean  @default(false)
  verifiedAt    DateTime?

  // Session management
  sessionToken      String?   @unique
  sessionExpiresAt  DateTime?
  lastLoginAt       DateTime?
  loginAttempts     Int       @default(0)
  lockedUntil       DateTime?

  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  businessProfiles  BusinessProfile[]
  creditTransactions AdvertiserCreditTransaction[]

  @@index([phoneNumber])
  @@index([email])
