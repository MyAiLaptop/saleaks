// Video ad - a hook question tied to a specific video
model VideoAd {
  id            String   @id @default(cuid())

  // The video this ad is attached to
  postId        String
  post          LiveBillboard @relation(fields: [postId], references: [id], onDelete: Cascade)

  // The business profile being advertised
  businessId    String
  business      BusinessProfile @relation(fields: [businessId], references: [id], onDelete: Cascade)

  // The hook question (e.g., "Need a plumber?")
  hookQuestion  String

  // Optional icon/emoji for visual appeal
  icon          String?  // e.g., "ðŸ”§", "â˜€ï¸", "ðŸ "

  // Pricing
  amountPaid    Int      // Amount paid in cents
  submitterShare Int     // 50% to content creator
  platformShare Int      // 50% to platform

  // Duration
  startsAt      DateTime @default(now())
  expiresAt     DateTime // When the ad expires

  // Status: ACTIVE, EXPIRED, CANCELLED, PENDING_PAYMENT
  status        String   @default("ACTIVE")

