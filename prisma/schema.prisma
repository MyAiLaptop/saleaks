// Business profile - public page for a business
model BusinessProfile {
  id            String   @id @default(cuid())
  publicId      String   @unique  // URL slug: /business/abc-plumbing

  // Owner
  advertiserId  String
  advertiser    AdvertiserAccount @relation(fields: [advertiserId], references: [id], onDelete: Cascade)

  // Business details
  name          String
  description   String?
  logo          String?  // R2 key for logo image
  coverImage    String?  // R2 key for cover image
  introVideo    String?  // R2 key for intro video (30-60 sec business intro)
  gallery       String?  // JSON array of media items [{type: 'image'|'video', url: string, caption?: string}]

  // Contact info
  phone         String?
  whatsapp      String?
  email         String?
  website       String?

  // Location/Service area
  country       String   @default("sa")
  province      String?
  city          String?
  serviceAreas  String?  // JSON array of areas served

  // Categories of service (e.g., "PLUMBER", "ELECTRICIAN", "SOLAR")
  categories    String?  // JSON array of business categories

  // Social links
  facebook      String?
  instagram     String?
  twitter       String?
  tiktok        String?

  // Stats
  totalClicks   Int      @default(0)
  totalViews    Int      @default(0)

  // Status: ACTIVE, SUSPENDED, DELETED
  status        String   @default("ACTIVE")

  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  videoAds      VideoAd[]

  @@index([advertiserId])
  @@index([status])
  @@index([country, province])
