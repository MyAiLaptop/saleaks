# Database URL - Use PostgreSQL for production
DATABASE_URL="file:./dev.db"

# Secret for encrypting secure messages (generate a strong random string)
ENCRYPTION_SECRET="change-this-to-a-secure-random-string-at-least-32-chars"

# Admin password for moderation (hash this in production)
ADMIN_PASSWORD="change-this-admin-password"

# Optional: Tor hidden service hostname
TOR_HOSTNAME=""

# File upload settings
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,video/mp4,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# PayFast Payment Integration
# Get your credentials from https://www.payfast.co.za/
# Use sandbox credentials for testing: https://sandbox.payfast.co.za/
PAYFAST_MERCHANT_ID=""
PAYFAST_MERCHANT_KEY=""
PAYFAST_PASSPHRASE=""  # Optional but recommended for security

# App URL (for payment callbacks)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ========================================
# CLOUDFLARE R2 STORAGE
# ========================================
# Get these from: Cloudflare Dashboard > R2 > Manage R2 API Tokens
# Create an API token with "Object Read & Write" permissions
