R2_ACCESS_KEY_ID=""        # R2 API token Access Key ID
R2_SECRET_ACCESS_KEY=""    # R2 API token Secret Access Key
R2_BUCKET_NAME="saleaks-media"  # Create this bucket in R2 dashboard
R2_PUBLIC_URL=""           # Optional: Custom domain or R2.dev public URL for watermarked content

